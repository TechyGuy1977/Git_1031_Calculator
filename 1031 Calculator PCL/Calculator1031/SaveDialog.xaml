<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Calculator1031.SaveDialog" BackgroundColor="White" Opacity="0.5">
	<StackLayout Spacing="3" HorizontalOptions="Center" VerticalOptions="Center" Padding="10,0,10,0" BackgroundColor="White" >
		<Label Text="Please enter the property name:" TextColor="Black" FontSize="18" />
		<Entry x:Name="entryName" TextColor="Black" />
		<Button x:Name="btnSaveName" Text="Save" BackgroundColor="#ff54a0e8" 
			TextColor="White" Clicked="btnSaveName_Clicked" />
		<Button x:Name="btnDismiss" Text="Dismiss" BackgroundColor="#ff54a0e8" 
			TextColor="White" Clicked="btnDismiss_Clicked" />
		
	</StackLayout>
</ContentPage>
